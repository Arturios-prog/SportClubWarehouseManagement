<div class="container">
	<div class="row my-5">
		<div class="col-lg-1"></div>
		<div class="col-lg-10">
			<RadzenCard class="m-3 width-200">
				<h3 class="h5">Sport Good Information</h3>
				<div class="d-flex flex-row">
					@*<RadzenImage Path="@customer.Employee?.Photo" Class="rounded-circle float-left mr-3" Style="width: 100px; height: 100px;" />*@
					<div>
						<div>SportGood</div>
						<b>@SportGood.Name</b>
					</div>
				</div>
				<div class="d-flex flex-row">
					<div class="col-md-10">
						<div class="mt-3">Category</div>
						<b>@SportGood.Category</b>
						<div class="mt-3">Quantity</div>
						<b>@SportGood.Quantity</b>
						<div class="mt-3">Description</div>
						<b>@SportGood.Description</b>
						
					</div>
				</div>
			</RadzenCard>

			<RadzenCard class="m-3 width-200">
				<h3 class="h5">Sport Good's Customers</h3>
				<RadzenDataGrid AllowFiltering="true" AllowColumnResize="true" PageSize="5" AllowPaging="true" AllowSorting="true"
								Data="@SportGood.Customers" TItem="@Customer">
					<Columns>
						<RadzenDataGridColumn TItem="Customer" Property="CustomerId" Filterable="false" Title="ID" Frozen="true" Width="70px" TextAlign="TextAlign.Center" >
						</RadzenDataGridColumn>
						<RadzenDataGridColumn TItem="Customer" Property="FirstName" Filterable="true" Title="First Name" TextAlign="TextAlign.Center" />
						<RadzenDataGridColumn TItem="Customer" Property="SecondName" Filterable="true" Title="Second Name" TextAlign="TextAlign.Center" />
						<RadzenDataGridColumn TItem="Customer" Property="CustomerId" Filterable="false" Title="Info" Width="70px" TextAlign="TextAlign.Center" >
							<Template Context="customer">
								<RadzenButton ButtonStyle="ButtonStyle.Info" Icon="info" Class="m-1" Click=@(() => OpenCustomerInfo(customer.CustomerId))></RadzenButton>
							</Template>
						</RadzenDataGridColumn>
						
					</Columns>
				</RadzenDataGrid>
			</RadzenCard>
		</div>
		<div class="col-lg-1"></div>
	</div>
</div>
