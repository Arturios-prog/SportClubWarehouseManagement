<RadzenTemplateForm Data="@SportGood" OnInvalidSubmit="@(() => {HandleInvalidSubmit();})"
					Submit="@((SportGood args) =>  HandleValidSubmit())">
	<div class="row">
		<div class="col-md-10">
			<RadzenFieldset Text="Sport Good Information">

				<div class="row">
					<div class="col-md-4 align-items-center d-flex">
						<RadzenLabel Text="Name" />
					</div>
					<div class="col-md-8">
						<RadzenTextBox Change="@CheckName" style="width: 100%;" Name="Name" @bind-Value="SportGood.Name" />
						<RadzenRequiredValidator Component="Name" Text="Name is required" Popup=false Style="position: static" />
						<RadzenCompareValidator Visible="@(!string.IsNullOrEmpty(SportGood.Name))" Value="@FoundName" Component="Name"
						Text="This name is already in the database" Style="position:static" Operator="CompareOperator.NotEqual"></RadzenCompareValidator>
					</div>
				</div>
				<div class="row">
					<div class="col-md-4 align-items-center d-flex">
						<RadzenLabel Text="Category" />
					</div>
					<div class="col-md-8">

						<RadzenDropDown @bind-Value="SportGood.Category" Data="@_categories" TextProperty="CategoryName" ValueProperty="EnumValue" AllowClear="false" Placeholder="Select Category" Name="Category" style="width: 100%;">
						</RadzenDropDown>
						<RadzenRequiredValidator Component="Category" Text="Category is required" Popup=false Style="position: static" />
					</div>
				</div>
				<div class="row">
					<div class="col-md-4 align-items-center d-flex">
						<RadzenLabel Text="Quantity" />
					</div>
					<div class="col-md-8">
						<RadzenNumeric Placeholder="30" @bind-Value="SportGood.Quantity" style="width: 100%;" Min="0" Name="Quantity" />
						<RadzenRequiredValidator Component="Quantity" Text="Quantity is required" Popup=false Style="position: static" />
					</div>
				</div>

				<div class="row">
					<div class="col-md-4 align-items-center d-flex">
						<RadzenLabel Text="Description" />
					</div>
					<div class="col-md-8">
						<RadzenTextBox Style="width: 100%; display: block;" Name="Description" @bind-Value="SportGood.Description" />
					</div>
				</div>
			</RadzenFieldset>
		</div>
	</div>

	<div class="row justify-content-center">
		<div class="col-md-12 d-flex align-items-end justify-content-center" style="margin-top: 16px;">
			<RadzenButton ButtonType="ButtonType.Submit" Icon="save" Text="Save" />
			<RadzenButton ButtonStyle="ButtonStyle.Secondary" Icon="cancel" style="display: inline-block; margin-left: 10px;" Text="Cancel" Click="() => Close()" />
		</div>
	</div>
</RadzenTemplateForm>